<Window x:Class="BooksManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BooksManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontFamily="Verdana">
    <Grid>
        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Label Background="Red" MinWidth="250" Margin="5" HorizontalAlignment="Center">Логин</Label>
            <TextBox Background="Pink" MinWidth="250" Margin="5" x:Name="tbName" HorizontalAlignment="Center" ToolTip="Введите логин"></TextBox>
            <Label Background="Red" MinWidth="250" Margin="5" HorizontalAlignment="Center">Пароль</Label>
            <TextBox Background="Pink" MinWidth="250" Margin="5" x:Name="tbPassword" HorizontalAlignment="Center" ToolTip="Введите пароль"></TextBox>
            <Button Background="Red" MinWidth="250" Margin="5" HorizontalAlignment="Center" x:Name="btGo" Click="btGo_Click">Вход</Button>
        </StackPanel>
        
    </Grid>
</Window>
