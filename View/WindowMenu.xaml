<Window x:Class="BooksManager.View.WindowMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BooksManager.View"
        mc:Ignorable="d"
        Title="WindowMenu" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" HorizontalAlignment="Left">
            <Button Background="red" Padding="5" Margin="10" x:Name="btDn" Click="btDn_Click"> Назад</Button>
        </StackPanel>

        <StackPanel Grid.Column="1">
            <Button Name="btAllBooks" Background="Pink" Click="btAllBooks_Click">Все ваши книги</Button>
            
        </StackPanel>
        
    </Grid>
</Window>
